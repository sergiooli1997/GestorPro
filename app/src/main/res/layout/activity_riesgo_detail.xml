<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RiesgoDetailActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:gravity="right"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:text="Riesgos del proyecto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Bajo"
            android:textColor="@color/white"
            android:layout_weight=".3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Medio"
            android:textColor="@color/white"
            android:layout_weight=".3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Alto"
            android:textColor="@color/white"
            android:layout_weight=".3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewRiesgoBajo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight=".3"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewRiesgoMedio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight=".3"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewRiesgoAlto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight=".3"/>



    </LinearLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newRiesgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_add"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_left"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"/>

</FrameLayout>
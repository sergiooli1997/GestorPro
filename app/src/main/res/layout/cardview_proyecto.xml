<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_folder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/textViewTitleProyecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del proyecto"
                android:maxLines="1"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textViewFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha inicio"
                android:maxLines="1"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textViewFechaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha fin"
                android:maxLines="1"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textViewAvance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 % de avance"
                android:maxLines="1"
                android:textSize="18sp"
                android:textColor="@color/white"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewDeleteProyecto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cancel"/>

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewPost"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="350dp"
        android:animateLayoutChanges="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/usuarioimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_clientes"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/usuarioname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de usuario"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

                <TextView
                    android:id="@+id/horapost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21:30"
                    android:layout_marginLeft="10dp"/>
        </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/textPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imageViewPostCard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/oficina"
            android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idLike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_like"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/nolikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:layout_margin="20dp"/>

    </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>